<div class="container login-signup bg-primary">
<h2> Recover Password </h2>
<% if (typeof message === 'string') { %>
       <p class="error"> <%= message %> </p>
<% }; %>

  <form class="form" method="post" action="/recover-password">
    <input class="form-control" id="user-name" type="text" name="userName" placeholder="Enter Username">
    <label for="security-questions">What was your sequrity question ?</label>
    <select id="security-questions" class="security-questions" name="securityQuestion">
    <option> City you were born </option>
    <option> Favorite movie </option>
    <option> Mother's maiden name </option>
  </select>
    <br> <br>
    <input class="form-control" id="security-question-answer" type="text" name="securityAnswer" placeholder="Enter answer">
    <br>
    <button class="btn btn-info"> Recover </button>
  </form>
</div>
